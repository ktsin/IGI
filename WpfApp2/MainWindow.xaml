<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Лабораторная работа №2" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel x:Name="_viewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Таблицы" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Stretch" FontFamily="DejaVu Sans" FontSize="18"/>
            <ListBox ItemsSource="{Binding TableNames}" VerticalAlignment="Stretch" SelectedItem="{Binding SelectedTable}" SelectionChanged="ListBox_SelectionChanged">
            </ListBox>
            <Button Content="Сохранить данные!" Margin="10, 20" Command="{Binding ChangeDB}" Click="Button_Click"/>
        </StackPanel>
        <DataGrid Grid.Column="1" ItemsSource="{Binding CurrentTable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="DataViewTable" RowEditEnding="DataViewTable_RowEditEnding"/>

    </Grid>
</Window>
